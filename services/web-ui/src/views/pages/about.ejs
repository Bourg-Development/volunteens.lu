<% title = "About Us" %>
<link rel="stylesheet" href="/static/stylesheets/pages/about.css">

<!-- Hero Section -->
<section class="about-hero">
    <div class="about-hero-content fade-in">
        <h1><%= cms.hero_title || 'About' %> <span class="gradient-text">Volunteens</span></h1>
        <p>
            <%= cms.hero_subtitle || 'Empowering young people to make a difference in their communities.' %>
        </p>
    </div>
</section>

<!-- Company Overview -->
<section class="company-overview">
    <div class="overview-container">
        <div class="overview-content slide-in-left">
            <h2><%= cms.whoweare_title || 'Who We Are' %></h2>
            <p>
                <%= cms.whoweare_text || 'Volunteens is a platform dedicated to connecting young volunteers with organizations that need their help. We believe in the power of youth to create positive change and provide the tools to make volunteering accessible, rewarding, and impactful.' %>
            </p>
        </div>
        <div class="overview-visual slide-in-right">
            <div class="overview-image">
                <span class="material-symbols-outlined">groups</span>
            </div>
        </div>
    </div>
</section>

<!-- Timeline -->
<section class="timeline-section">
    <h2 class="section-title fade-in"><%= cms.timeline_title || 'Our Journey' %></h2>
    <div class="timeline">
        <div class="timeline-item slide-in-left">
            <div class="timeline-year"><%= cms.timeline_1_year || '2020' %></div>
            <div class="timeline-content">
                <h3><%= cms.timeline_1_title || 'Foundation' %></h3>
                <p>
                    <%= cms.timeline_1_text || 'Volunteens was founded with a mission to connect young people with volunteer opportunities.' %>
                </p>
            </div>
        </div>
        <div class="timeline-item slide-in-right">
            <div class="timeline-year"><%= cms.timeline_2_year || '2021' %></div>
            <div class="timeline-content">
                <h3><%= cms.timeline_2_title || 'First Milestone' %></h3>
                <p>
                    <%= cms.timeline_2_text || 'Reached our first 1,000 registered volunteers and partnered with 50 organizations.' %>
                </p>
            </div>
        </div>
        <div class="timeline-item slide-in-left">
            <div class="timeline-year"><%= cms.timeline_3_year || '2022' %></div>
            <div class="timeline-content">
                <h3><%= cms.timeline_3_title || 'Growth & Expansion' %></h3>
                <p>
                    <%= cms.timeline_3_text || 'Expanded our platform with new features and grew to serve the entire Luxembourg region.' %>
                </p>
            </div>
        </div>
        <div class="timeline-item slide-in-right">
            <div class="timeline-year"><%= cms.timeline_4_year || '2023' %></div>
            <div class="timeline-content">
                <h3><%= cms.timeline_4_title || 'New Programs' %></h3>
                <p>
                    <%= cms.timeline_4_text || 'Launched new programs including summer volunteer camps and school partnerships.' %>
                </p>
            </div>
        </div>
        <div class="timeline-item slide-in-left">
            <div class="timeline-year"><%= cms.timeline_5_year || '2024' %></div>
            <div class="timeline-content">
                <h3><%= cms.timeline_5_title || 'Looking Forward' %></h3>
                <p>
                    <%= cms.timeline_5_text || 'Continuing to grow and innovate, with plans to expand across Europe.' %>
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="team-section">
    <h2 class="section-title fade-in"><%= cms.team_title || 'Volunteens Team' %></h2>
    <div class="team-grid">
        <div class="team-card fade-in">
            <div class="team-image">
                <span class="material-symbols-outlined">person</span>
            </div>
            <h3><%= cms.team_1_name || 'Max Mustermann' %></h3>
            <p class="team-role"><%= cms.team_1_role || 'CEO' %></p>
            <p class="team-bio">
                <%= cms.team_1_bio || 'Passionate about youth empowerment and social impact.' %>
            </p>
        </div>
        <div class="team-card fade-in">
            <div class="team-image">
                <span class="material-symbols-outlined">person</span>
            </div>
            <h3><%= cms.team_2_name || 'Jempi Mustermann' %></h3>
            <p class="team-role"><%= cms.team_2_role || 'CFO' %></p>
            <p class="team-bio">
                <%= cms.team_2_bio || 'Expert in nonprofit finance and sustainable growth.' %>
            </p>
        </div>
        <div class="team-card fade-in">
            <div class="team-image">
                <span class="material-symbols-outlined">person</span>
            </div>
            <h3><%= cms.team_3_name || 'Alex Mustermann' %></h3>
            <p class="team-role"><%= cms.team_3_role || 'CTO' %></p>
            <p class="team-bio">
                <%= cms.team_3_bio || 'Building technology that connects communities.' %>
            </p>
        </div>
        <div class="team-card fade-in">
            <div class="team-image">
                <span class="material-symbols-outlined">person</span>
            </div>
            <h3><%= cms.team_4_name || 'Hugo Mustermann' %></h3>
            <p class="team-role"><%= cms.team_4_role || 'COO' %></p>
            <p class="team-bio">
                <%= cms.team_4_bio || 'Ensuring smooth operations and volunteer satisfaction.' %>
            </p>
        </div>
    </div>
</section>

<!-- CTA: Need Motivated Helpers -->
<section class="cta-section cta-helpers">
    <div class="bubble bubble-1"></div>
    <div class="bubble bubble-2"></div>
    <div class="cta-container fade-in">
        <h2><%= cms.cta_org_title || 'Need Motivated Helpers?' %></h2>
        <p>
            <%= cms.cta_org_text || 'Partner with us to find dedicated young volunteers for your organization.' %>
        </p>
        <a href="<%= authUrl %>/register?type=organization" class="cta-btn"><%= cms.cta_org_button || 'Find Your Team' %></a>
    </div>
</section>

<!-- CTA: Are you a student -->
<section class="cta-section cta-students">
    <div class="bubble bubble-1"></div>
    <div class="bubble bubble-2"></div>
    <div class="cta-container fade-in">
        <h2><%= cms.cta_student_title || 'Are You a Student?' %></h2>
        <p>
            <%= cms.cta_student_text || 'Start your volunteer journey today and make a real difference.' %>
        </p>
        <a href="<%= authUrl %>/register" class="cta-btn"><%= cms.cta_student_button || 'Start Your Journey' %></a>
    </div>
</section>

<script src="/static/javascript/pages/about.js"></script>
