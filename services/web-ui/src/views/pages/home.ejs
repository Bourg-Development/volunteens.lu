<% title = "Home" %>
<link rel="stylesheet" href="/static/stylesheets/pages/home.css">

<!-- Hero Section -->
<section class="hero" id="home">
    <div class="hero-content fade-in">
        <h1>
            <%= cms.hero_title || 'Empowering Youth Through Volunteer Action' %>
        </h1>
        <p>
            <%= cms.hero_subtitle || 'Connect with meaningful opportunities and make a difference in your community.' %>
        </p>
        <div class="cta-buttons">
            <a href="<%= authUrl %>/register" class="btn btn-primary"><%= cms.hero_cta || 'Get Started' %></a>
            <a href="#features" class="btn btn-secondary">Learn More</a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features">
    <h2 class="section-title fade-in"><%= cms.features_title || 'Why Choose Volunteens?' %></h2>
    <p class="section-subtitle fade-in"><%= cms.features_subtitle || 'We make volunteering easy, rewarding, and impactful' %></p>
    <div class="features-grid">
        <div class="feature-card fade-in">
            <div class="feature-icon">
                <span class="material-symbols-outlined">search</span>
            </div>
            <h3><%= cms.feature_1_title || 'Find Opportunities' %></h3>
            <p><%= cms.feature_1_text || 'Browse through hundreds of volunteer opportunities that match your interests and schedule.' %></p>
        </div>
        <div class="feature-card fade-in">
            <div class="feature-icon">
                <span class="material-symbols-outlined">trending_up</span>
            </div>
            <h3><%= cms.feature_2_title || 'Track Your Impact' %></h3>
            <p><%= cms.feature_2_text || 'Log your volunteer hours and see the difference you\'re making in your community.' %></p>
        </div>
        <div class="feature-card fade-in">
            <div class="feature-icon">
                <span class="material-symbols-outlined">workspace_premium</span>
            </div>
            <h3><%= cms.feature_3_title || 'Get Recognized' %></h3>
            <p><%= cms.feature_3_text || 'Earn certificates and rewards for your volunteer work to showcase your commitment.' %></p>
        </div>
    </div>
</section>

<!-- Mission Section -->
<section id="mission" class="mission">
    <div class="mission-container">
        <div class="mission-content slide-in-left">
            <h2><%= cms.mission_title || 'Our Mission' %></h2>
            <p>
                <%= cms.mission_text || 'We connect young volunteers with organizations that need their energy and enthusiasm. Our platform makes it easy to find, track, and get recognized for volunteer work.' %>
            </p>
        </div>
        <div class="mission-visual slide-in-right">
            <div class="mission-icon">
                <span class="material-symbols-outlined">rocket_launch</span>
            </div>
        </div>
    </div>
</section>

<!-- History Section -->
<section id="history" class="history">
    <div class="history-container">
        <div class="history-visual slide-in-left">
            <div class="history-icon">
                <span class="material-symbols-outlined">auto_stories</span>
            </div>
        </div>
        <div class="history-content slide-in-right">
            <h2><%= cms.story_title || 'Our Story' %></h2>
            <p>
                <%= cms.story_text || 'Founded with a passion for youth empowerment, Volunteens has grown into a thriving community connecting thousands of young volunteers with meaningful opportunities across Luxembourg and beyond.' %>
            </p>
        </div>
    </div>
</section>

<!-- CTA: Need Motivated Helpers -->
<section class="cta-section cta-helpers">
    <div class="bubble bubble-1"></div>
    <div class="bubble bubble-2"></div>
    <div class="cta-container fade-in">
        <h2><%= cms.cta_title || 'Ready to Make a Difference?' %></h2>
        <p>
            <%= cms.cta_text || 'Join thousands of young volunteers who are already making an impact.' %>
        </p>
        <a href="<%= authUrl %>/register" class="cta-btn"><%= cms.cta_button || 'Sign Up Now' %></a>
    </div>
</section>

<!-- Stats Section -->
<section class="stats">
    <div class="stats-container">
        <div class="stat-item scale-in">
            <h2><%= cms.stat_1_value || '50K+' %></h2>
            <p><%= cms.stat_1_label || 'Active Volunteers' %></p>
        </div>
        <div class="stat-item scale-in">
            <h2><%= cms.stat_2_value || '99.9%' %></h2>
            <p><%= cms.stat_2_label || 'Satisfaction Rate' %></p>
        </div>
        <div class="stat-item scale-in">
            <h2><%= cms.stat_3_value || '24/7' %></h2>
            <p><%= cms.stat_3_label || 'Support Available' %></p>
        </div>
        <div class="stat-item scale-in">
            <h2><%= cms.stat_4_value || '150+' %></h2>
            <p><%= cms.stat_4_label || 'Events Per Year' %></p>
        </div>
    </div>
</section>

<script src="/static/javascript/pages/home.js"></script>
