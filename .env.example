# ===========================================
# Volunteens Environment Configuration
# ===========================================

NODE_ENV=development

# ===========================================
# Service Ports
# ===========================================
WEB_UI_PORT=3001
AUTH_PORT=3002
ADMIN_PORT=3003
EVENTS_PORT=3004
DASH_PORT=3005
PAYMENT_PORT=3007

# ===========================================
# Service URLs
# ===========================================
API_URL=http://api.localhost
DASH_URL=http://localhost:3005
AUTH_URL=http://localhost:3002
ADMIN_URL=http://localhost:3003
EVENTS_URL=http://localhost:3004
PAYMENT_URL=http://localhost:3007

# ===========================================
# Auth Database (PostgreSQL)
# ===========================================
AUTH_DB_USER=volunteens-auth
AUTH_DB_PASSWORD=password123
AUTH_DB_NAME=volunteens-auth_dev
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432

# ===========================================
# Events Database (PostgreSQL)
# ===========================================
EVENTS_DB_USER=volunteens-events
EVENTS_DB_PASSWORD=password123
EVENTS_DB_NAME=volunteens-events_dev
EVENTS_DB_HOST=events-db
EVENTS_DB_PORT=5432

# ===========================================
# Payment Database (PostgreSQL)
# ===========================================
PAYMENT_DB_USER=volunteens-payment
PAYMENT_DB_PASSWORD=password123
PAYMENT_DB_NAME=volunteens-payment_dev
PAYMENT_DB_HOST=payment-db
PAYMENT_DB_PORT=5432

# ===========================================
# JWT Configuration
# ===========================================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Admin Service
# ===========================================
# Default super admin created on first run (change password immediately!)
DEFAULT_ADMIN_EMAIL=admin@volunteens.lu
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# ===========================================
# Email Service
# ===========================================
EMAIL_PORT=3006
EMAIL_URL=http://localhost:3006
EMAIL_SERVICE_SECRET=your-email-service-secret

# ===========================================
# Service Secrets (for internal service-to-service auth)
# ===========================================
ADMIN_SERVICE_SECRET=your-admin-service-secret
PAYMENT_SERVICE_SECRET=your-payment-service-secret

# For development with Mailhog (web UI at http://localhost:8025)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM="Volunteens" <noreply@volunteens.lu>

# For production, use your SMTP provider:
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@volunteens.lu
# SMTP_PASSWORD=your-smtp-password

# ===========================================
# SSL/TLS (Production only)
# ===========================================
# SSL_KEY_PATH=./certs/server.key
# SSL_CERT_PATH=./certs/server.crt
# SSL_CA_PATH=./certs/ca.crt

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
