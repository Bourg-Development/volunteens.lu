<% title = "Events" %>
<link rel="stylesheet" href="/static/stylesheets/pages/events.css">

<!-- Page Header -->
<section class="events-header">
    <div class="events-header-content fade-in">
        <h1>Upcoming <span class="gradient-text">Events</span></h1>
        <p>Discover volunteer opportunities and make a difference in your community</p>
    </div>
</section>

<!-- Events Grid -->
<section class="events-section">
    <div class="events-container" id="eventsContainer">
        <!-- Loading state -->
        <div class="loading-state" id="loadingState">
            <span class="material-symbols-outlined spinning">progress_activity</span>
            <p>Loading events...</p>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="events-cta">
    <div class="events-cta-content fade-in">
        <h2>Don't See What You're Looking For?</h2>
        <p>Subscribe to our newsletter to get notified about new events and exclusive opportunities.</p>
        <div class="newsletter-form">
            <input type="email" placeholder="Enter your email address" id="newsletterEmail">
            <button class="btn btn-primary" id="subscribeBtn">Subscribe</button>
        </div>
    </div>
</section>

<script src="/static/javascript/pages/events.js"></script>
