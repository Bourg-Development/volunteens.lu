<% title = "Page Not Found" %>
<link rel="stylesheet" href="/static/stylesheets/pages/404.css">

<!-- 404 Section -->
<section class="error-404">
    <div class="error-content fade-in">
        <div class="error-visual">
            <div class="error-number">
                <span class="digit">4</span>
                <span class="digit">0</span>
                <span class="digit">4</span>
            </div>
        </div>

        <h1>Oops! Page Not Found</h1>
        <p class="error-message">
            The page you're looking for seems to have wandered off on a volunteer mission.
        </p>

        <div class="error-actions">
            <a href="/" class="btn btn-primary">Go Back Home</a>
        </div>
    </div>

    <div class="floating-shapes">
        <div class="shape shape-1"></div>
    </div>
</section>

<script src="/static/javascript/pages/404.js"></script>
